<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/amigoinn.example.v4sales"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:weightSum="100"
        android:background="@color/main_color_500"
        android:textColor="@color/white"
        >

        <fr.ganfra.materialspinner.MaterialSpinner
            android:id="@+id/spinnerMonth"
            app:ms_multiline="false"
            app:ms_hint="Select Month"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:ms_thickness="1dp"
            app:ms_arrowColor="#0000FF"
            app:ms_arrowSize="0dp"
            android:layout_weight="100"
            app:ms_floatingLabelText=""
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ListView

    android:id="@+id/list_view_absent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
</LinearLayout>
