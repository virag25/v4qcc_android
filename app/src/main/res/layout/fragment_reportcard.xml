            android:layout_width="0dp"
            android:layout_weight="49.75"
            android:text="Positives"
            android:layout_height="match_parent"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textSize="18dp"
            android:gravity="center"

            android:background="@color/main_color_500"
            android:textColor="@color/white"

            app:typeface="robotoRegular" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/divider3"
            android:layout_weight="0.5"
            android:background="@color/main_color_500"
            />


        <amigoinn.example.v4sales.RobotoTextView
            android:id="@+id/textTitle1"
            style="@style/TextViewAppearance.Title1"
            android:layout_width="0dp"
            android:layout_weight="49.75"
            android:text="Negatives"
            android:layout_height="match_parent"
            android:textSize="18dp"

            android:gravity="center"

            android:background="@color/main_color_500"
            android:textColor="@color/white"

            app:typeface="robotoRegular" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100"
        android:orientation="horizontal"
        >
        <ListView
            android:id="@+id/lstGood"

            android:layout_width="0dp"
            android:layout_weight="49.75"

            android:layout_height="match_parent"
            android:textColor="@color/white"

            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/divider4"
            android:layout_weight="0.5"
            android:background="@color/main_color_300"
            />



        <ListView
            android:id="@+id/lstBad"

            android:layout_width="0dp"
            android:layout_weight="49.75"

            android:layout_height="match_parent"
            android:textColor="@color/white"

            />

    </LinearLayout>
